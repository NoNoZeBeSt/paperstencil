.row.prepend-top5rem
  .col-md-8.col-xs-8
    .section_header.append-bottom Sign up

.row
  .col-md-5.col-xs-5
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      = devise_error_messages!
      %p
        = f.label :first_name
        %span.mandatory *
        %br/
        = f.text_field :first_name, :class => "form-control"
      %p
        = f.label :last_name
        %span.mandatory *
        %br/
        = f.text_field :last_name, :class => "form-control"
      %p
        = f.label :email
        %span.mandatory *
        %br/
        = f.text_field :email, :class => "form-control"
      %p
        = f.label :password
        %span.mandatory *
        %br/
        = f.password_field :password, :class => "form-control"
      %p
        = f.label :password_confirmation
        %span.mandatory *
        %br/
        = f.password_field :password_confirmation, :class => "form-control"
      %p
        = f.label :plan
        %span.mandatory *
        (
        %a{:href=> url_for(:action => "pricing", :controller => "/info"), :target=>"_new"} details
        )
        %br/
        - default = params[:plan] || 'pay_as_you_go'
        %select(name="user[plan]")
          - ['pay_as_you_go', 'monthly'].each do |plan|
            %option{ :value => plan, :selected => default == plan ? "selected" : nil }
              = plan.humanize

      %p= f.submit "Sign up", :class=> "btn btn-primary"
.row
  .col-md-8.col-xs-8
    = render :partial => "devise/shared/links"
